{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["es2019", "dom", "dom.iterable"],

        "rootDir": ".",
        "outDir": "Project/dist",

        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@types": ["Project/static/ts/types/index.ts"],
            
            "@DOMUtils": ["Project/static/ts/utils/DOMUtils/index.ts"],
            "@ajaxUtils": ["Project/static/ts/utils/ajaxUtils/index.ts"],
            "@utils": ["Project/static/ts/utils/utils/index.ts"],
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "tsc-alias": {
        "resolveFullPaths": true,
        "replaceExtensions": {
            ".ts": ".js"
        },
        "addExtensions": true
    }
}